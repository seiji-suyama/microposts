<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to 'followings', followings_user_path(@user) %>
      <%= link_to 'followers', followers_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Followings</h3>
    <% @users.each do |user| %>
    <%= user.name %><br>
    <%= user.email %><br>
    <%= user.profile %><br>
    <%= user.area %>
  <% end %>  
  </div>
</div>


