<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1 class="clearfix">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>  
      
      <table class="table table-striped">
        <tr>
          <th> name: </th> <td> <%= @user.name %> </td>
        </tr>
        <tr>
          <th> email: </th> <td> <%= @user.email %> </td>
        </tr>
        <tr>
          <th> profile: </th> <td> <%= @user.profile %> </td>
        </tr>
        <tr>
          <th> area: </th> <td> <%= @user.area  %> </td>
        </tr>  
      </table>
    </section>
  </aside>
</div>    

  

     